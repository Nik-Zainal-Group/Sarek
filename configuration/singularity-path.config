/*
 * -------------------------------------------------
 * Nextflow config file for Sarek
 * -------------------------------------------------
 * Paths to Singularity images for every process
 * No image will be pulled automatically
 * Need to transfer and set up images before
 * -------------------------------------------------
 */

singularity {
  enabled = true
}

params {
  repository="maxulysse"
  containerPath="$NXF_SINGULARITY_CACHEDIR"
  tag='latest'
}

process {
  $BuildBWAindexes.container          = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $BuildPicardIndex.container         = "${params.containerPath}/${params.repository}/picard-${params.tag}.img"
  $BuildSAMToolsIndex.container       = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $BuildVCFIndex.container            = "${params.containerPath}/${params.repository}/igvtools-${params.tag}.img"
  $ConcatVCF.container                = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $CreateRecalibrationTable.container = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $GenerateMultiQCconfig.container    = "${params.containerPath}/${params.repository}/qctools-${params.tag}.img"
  $IndelRealigner.container           = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $MapReads.container                 = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $MarkDuplicates.container           = "${params.containerPath}/${params.repository}/picard-${params.tag}.img"
  $MergeBams.container                = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RealignerTargetCreator.container   = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $RecalibrateBam.container           = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $RunAlleleCount.container           = "${params.containerPath}/${params.repository}/runallelecount-${params.tag}.img"
  $RunAscat.container                 = "${params.containerPath}/${params.repository}/r-base-${params.tag}.img"
  $RunBamQC.container                 = "${params.containerPath}/${params.repository}/qctools-${params.tag}.img"
  $RunBcftoolsStats.container         = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunConvertAlleleCounts.container   = "${params.containerPath}/${params.repository}/r-base-${params.tag}.img"
  $RunFastQC.container                = "${params.containerPath}/${params.repository}/qctools-${params.tag}.img"
  $RunFreeBayes.container             = "${params.containerPath}/${params.repository}/freebayes-${params.tag}.img"
  $RunGenotypeGVCFs.container         = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $RunHaplotypecaller.container       = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $RunManta.container                 = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunMultiQC.container               = "${params.containerPath}/${params.repository}/qctools-${params.tag}.img"
  $RunMutect1.container               = "${params.containerPath}/${params.repository}/mutect1-${params.tag}.img"
  $RunMutect2.container               = "${params.containerPath}/${params.repository}/gatk-${params.tag}.img"
  $RunSamtoolsStats.container         = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunSingleManta.container           = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunSingleStrelka.container         = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunSnpeff.container                = {params.genome == 'GRCh38' ? "${params.containerPath}/${params.repository}/snpeffgrch38-${params.tag}.img" : "${params.containerPath}/${params.repository}/snpeffgrch37-${params.tag}.img"}
  $RunStrelka.container               = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunStrelkaBP.container             = "${params.containerPath}/${params.repository}/sarek-${params.tag}.img"
  $RunVcftools.container              = "${params.containerPath}/${params.repository}/qctools-${params.tag}.img"
  $RunVEP.container                   = {params.genome == 'GRCh38' ? "${params.containerPath}/${params.repository}/vepgrch38-${params.tag}.img" : "${params.containerPath}/${params.repository}/vepgrch37-${params.tag}.img"}
}
